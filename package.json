{
  "name": "mcp-opsgenie",
  "version": "1.0.0",
  "description": "MCP server for Opsgenie integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-opsgenie": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node test.js",
    "clean": "rm -rf dist",
    "setup": "npm install && npm run build && node scripts/setup.cjs",
    "lint": "echo 'No linter configured'",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": ["mcp", "opsgenie", "alerts"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "opsgenie-sdk": "^0.5.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
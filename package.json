{
  "name": "mcp-opsgenie",
  "version": "1.0.4",
  "description": "MCP server for Opsgenie integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-opsgenie": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node test.js",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "setup": "npm install && npm run build && node scripts/setup.cjs",
    "lint": "echo 'No linter configured'",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run test"
  },
  "keywords": ["mcp", "opsgenie", "alerts"],
  "author": "Hainan Zhao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HainanZhao/mcp-opsgenie.git"
  },
  "bugs": {
    "url": "https://github.com/HainanZhao/mcp-opsgenie/issues"
  },
  "homepage": "https://github.com/HainanZhao/mcp-opsgenie#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "opsgenie-sdk": "^0.5.1",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}